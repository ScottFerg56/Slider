<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:views="clr-namespace:CamSlider.Views"
            x:Class="CamSlider.Views.MainPage">
	<TabbedPage.Children>
		<NavigationPage Title="Connect">
			<x:Arguments>
				<views:AboutPage />
			</x:Arguments>
		</NavigationPage>

		<NavigationPage Title="Manual">
			<x:Arguments>
				<views:ManualPage />
			</x:Arguments>
		</NavigationPage>

		<NavigationPage Title="Sequence">
			<x:Arguments>
				<views:SequencePage />
			</x:Arguments>
		</NavigationPage>

		<NavigationPage Title="Settings">
			<x:Arguments>
				<views:SettingsPage />
			</x:Arguments>
		</NavigationPage>
	</TabbedPage.Children>
</TabbedPage>