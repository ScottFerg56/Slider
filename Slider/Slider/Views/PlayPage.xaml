<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CamSlider.Views.PlayPage"
			 Title="Play">
    <ContentPage.Content>
        <Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<Button Grid.Row="0" Grid.Column="0" x:Name="ButtonPlay" Image="play.png" BackgroundColor="White" />
			<Button Grid.Row="0" Grid.Column="1" x:Name="ButtonPause" Image="pause.png" BackgroundColor="White" />
			<Button Grid.Row="0" Grid.Column="2" x:Name="ButtonStop" Image="stop.png" BackgroundColor="White" />
		</Grid>
    </ContentPage.Content>
</ContentPage>