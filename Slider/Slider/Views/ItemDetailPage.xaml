<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Slider.Views.ItemDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Time:" FontSize="Medium" />
        <Label Text="{Binding Item.Time}" FontSize="Small"/>
        <Label Text="Slide:" FontSize="Medium" />
        <Label Text="{Binding Item.Slide}" FontSize="Small"/>
		<Label Text="Pan:" FontSize="Medium" />
		<Label Text="{Binding Item.Pan}" FontSize="Small"/>
	</StackLayout>
</ContentPage>